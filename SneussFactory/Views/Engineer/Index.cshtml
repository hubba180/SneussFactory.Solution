@using System.Collections.Generic
@using Factory.Models

<h1>Engineering Department</h1>
<br>
<h3>Your current engineers</h3><br>
  @if (Model.Count == 0)
  {
    <p>No engineers on roster.</p>
  }
<ul>
  @foreach (Engineer a in Model)
  {
    <li>@Html.ActionLink(a.Name, "Details", "Engineer", new { id = a.EngineerId })</li>
  }
</ul>
<br>
<p>@Html.ActionLink("Add an engineer to the roster", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>