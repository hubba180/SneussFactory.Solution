@using System.Collections.Generic
@using Factory.Models

<h1>Machine Inventory</h1>
<br>
<h3>Machines: </h3><br>
  @if (Model.Count == 0)
  {
    <p>No machines are currently on the floor.</p>
  }
<ul>
  @foreach (Machine a in Model)
  {
    <li>@Html.ActionLink(a.Name, "Details", "Machine", new { id = a.MachineId })</li>
  }
</ul>
<br>
<p>@Html.ActionLink("Add a new machine to the floor", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>